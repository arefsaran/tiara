<body class="rtl">
<!-- page-wrapper Start-->
<div class="page-wrapper">

    <!-- Page Header Start-->
    <div class="page-main-header" style="padding-bottom: env(safe-area-bottom, 0);">
        <div class="mobile-sidebar m-r-5">
            <div class="media-body text-right switch-sm">
                <label class="switch"><a href="#"><i id="sidebar-toggle" data-feather="align-right"></i></a></label>
            </div>
        </div>
        <div class="main-header-right row">
            <div class="col" style="display: flex; justify-content: space-between;">
                <form class="d-inline-block" action="/search" enctype="application/x-www-form-urlencoded" method="GET">
                    <input class="border-1 rounded p-b-5 col-lg-12" type="text" placeholder="جستجو در  <%= storeInfo.storeName %>" name="productNameForSearch" style="background-color: white; border-color: #FF8084;" required>
                    <!-- <button class="border-1 rounded" type="submit" style="background-color: white; border-color: #FF8084;">برو</button> -->
                </form>
                <a id="basketIcon" href="/basket">   
                    <sub>
                        <strong id="basketProductsNumber">
                        </strong>
                    </sub>
                    <svg xmlns="https://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-cart2" viewBox="0 0 16 16">
                        <path fill-rule="evenodd" d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l1.25 5h8.22l1.25-5H3.14zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
                    </svg>
                </a>
            </div>
        </div>
    </div>
    <!-- Page Header Ends -->

    <!-- Page Body Start-->
    <div class="page-body-wrapper">

        <!-- Page Sidebar Start-->
        <div class="page-sidebar">
            <div class="main-header-left d-none d-lg-block">
                <a href="/">
                <div class="logo-wrapper">
                        <strong style="color: dimgray; font-size: 25px;"> <%= storeInfo.storeName %> </strong>
                    <!-- <img class="blur-up lazyloaded" src="./assets/images/icon/logoTiara.png" alt="" style="height: 40px; width: 195px;"> -->
                </div>
                </a>
            </div>
            <div class="sidebar custom-scrollbar">
                <ul class="sidebar-menu">
                    <li><a class="sidebar-header" href="/"><i data-feather="home"></i><span>خانه</span></a></li>
                    <li><p class="sidebar-header" href="#">
                        <i data-feather="shopping-bag"></i>
                        <span>دسته ها</span>
                        </p>
                        <ul>
                        <% categories.forEach(category=> { %>
                            <form method="GET" action="/productsPage">
                                <li class="m-1 shadow-sm"><input class="w-100 bg-white border-0" name="categoryName" value="<%= category.categoryName %>" type="submit"></li>
                            </form>
                            <% }) %>
                        </ul>
                    </li>
                    <li><a class="sidebar-header" href="/storeInfo"><i data-feather="info"></i><span>مشخصات فروشگاه</span></a></li>
                    <!-- <li><a class="sidebar-header" href="/support"><i data-feather="message-square"></i><span>ارتباط با ما</span></a></li> -->
                    <!-- <li><a class="sidebar-header" href="https://tiaraplatform.ir"><i data-feather="code" ></i><span>درباره ما</span></a></li> -->
                        <!-- <ul class="sidebar-submenu">
                            <li><a href="profile"><i class="fa fa-circle"></i>مشخصات فروشگاه</a></li>
                        </ul> -->
                    <!-- </li> -->
                </ul>
            </div>
        </div>
        <!-- Page Sidebar Ends-->
        <script src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
        <script src="./assets/js/shoppingCart.js"></script>
        <script>
            function totalNumber() {
                document.getElementById("basketProductsNumber").innerHTML = shoppingCart.countCart();
            }
            totalNumber();
        </script>