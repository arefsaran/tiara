<%- include("adminDashboardHeader"); -%>

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid p-t-45">
        <div class="row">
            <div class="col-sm-12">

                <div class="card">
                    <div class="card-header">
                        <h5>خلاصه فروش :</h5>
                    </div>
                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-xl-3 col-md-6 xl-50">
                                    <div class="card o-hidden shadow-lg widget-cards">
                                        <div class="bg-warning card-body">
                                            <div class="media static-top-widget row">
                                                <div class="icons-widgets col-4">
                                                    <div class="align-self-center text-center"><i data-feather="dollar-sign" class="font-warning"></i></div>
                                                </div>
                                                <div class="media-body col-8"><p class="m-0"></p>
                                                    <h4 class="mb-0">درآمد کل<p class="counter"><%= salesAmount %> <strong>تومان</strong></p></h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-3 col-md-6 xl-50">
                                    <div class="card o-hidden shadow-lg widget-cards">
                                        <div class="bg-secondary card-body">
                                            <div class="media static-top-widget row">
                                                <div class="icons-widgets col-4">
                                                    <div class="align-self-center text-center"><i data-feather="dollar-sign" class="font-secondary"></i></div>
                                                </div>
                                                <div class="media-body col-8"><p class="m-0"></p>
                                                    <h4 class="mb-0">درآمد سی روز<p class="counter"><%= lastMonthSalesAmount %> <strong>تومان</strong></p></h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xl-3 col-md-6 xl-50">
                                    <div class="card o-hidden shadow-lg widget-cards">
                                        <div class="bg-primary card-body">
                                            <div class="media static-top-widget row">
                                                <div class="icons-widgets col-4">
                                                    <div class="align-self-center text-center"><i data-feather="dollar-sign" class="font-primary"></i></div>
                                                </div>
                                                <div class="media-body col-8"><p class="m-0"></p>
                                                    <h4 class="mb-0">تعداد فروش/ماه<p class="counter"> <strong><%= lastMonthSalesNumber %></strong></p></h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xl-3 col-md-6 xl-50">
                                    <div class="card o-hidden shadow-lg widget-cards">
                                        <div class="bg-danger card-body">
                                            <div class="media static-top-widget row">
                                                <div class="icons-widgets col-4">
                                                    <div class="align-self-center text-center"><i data-feather="bar-chart" class="font-danger"></i></div>
                                                </div>
                                                <div class="media-body col-8"><p class="m-0"></p>
                                                    <h4 class="mb-0">تعداد فروش کل<p class="counter"> <strong><%= usersNumber %></strong></p></h4>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12 xl-100">
                    <div class="card height-equal">
                        <div class="card-header">
                            <h5>خلاصه اطلاعات جدیدترین فروشگاه ها</h5>
                        </div>
                        <div class="card-body">
                            <div class="user-status table-responsive products-table">
                                <table class="table table-bordernone mb-0">
                                    <thead>
                                    <tr>
                                        <th>نام فروشگاه</th>
                                        <th>آدرس</th>
                                        <th>دامنه</th>
                                        <th>مانده</th>
                                        <th>پلن</th>
                                        <th>تاریخ سفارش</th>
                                        <th>مبلغ خرید</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                <% users.forEach(user=> { %>
                                    <tr>
                                        <td class="font-secondary"><%= user.userStore.storeName %></td>
                                        <td class="font-dark w-25"><%= user.userStore.storeAddress %></td>
                                        <td class="font-secondary"><%= user.userStore.storeId %></td>
                                        <td class="font-dark"><%= user.userStore.storePlan.planTimeToExpiry %> روز</td>
                                        <td class="font-secondary"><%= user.userStore.storePlan.planType %></td>
                                        <td class="font-dark"><%= user.userStore.paidTime %></td>
                                        <td class="font-secondary"><%= user.userPaid %></td>
                                    </tr>
                                <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
<input type="hidden" value="<%= adminToken %>" id="adminToken" >
<script>
    function tokenSaver() {
        let adminToken =  document.getElementById("adminToken").value;
        localStorage.setItem("adminToken", adminToken);
        document.getElementById("logoutButton").onclick = function logout() {
            localStorage.removeItem("adminToken");
        }
    }
    tokenSaver();
</script>

<%- include("adminDashboardFooter"); -%>