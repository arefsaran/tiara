<%- include("header"); -%>

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid p-t-45">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>مشخصات فروشگاه</h5>
                    </div>
                    <div class="card-body">
                        <div class="row product-adding">
                            <div class="col-12" style="display: inline-block; text-align: right;">
                                    <div class="form">
                                        <div class="form-group mb-3 row">
                                            <label
                                                for="validationCustom03"
                                                class="col-xl-3 col-sm-4 mb-0"
                                                >نام فروشگاه :</label
                                            >
                                            <strong
                                                name="storeName"
                                                class="form-control col-xl-8 col-sm-7 h-100"
                                                id="validationCustom03"
                                                ><%= storeDetails.storeName %></strong>
                                        </div>
                                        <div class="form-group mb-3 row">
                                            <label
                                                for="validationCustom07"
                                                class="col-xl-3 col-sm-4 mb-0"
                                                >آدرس فروشگاه :</label
                                            >
                                            <strong
                                                name="storeAddress"
                                                class="form-control col-xl-8 col-sm-7 h-100"
                                                id="validationCustom07"
                                                ><%= storeDetails.storeAddress %></strong>
                                        </div>
                                    </div>
                                    <div class="form">
                                        <div class="form-group row">
                                            <label
                                                for="validationCustom08"
                                                class="col-xl-3 col-sm-4 mb-0"
                                                >شماره تماس فروشگاه:</label
                                            >
                                            <strong
                                                name="storePhoneNumber"
                                                class="form-control col-xl-8 col-sm-7"
                                                id="validationCustom08"
                                                ><%= storeDetails.storePhoneNumber %></strong>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Container-fluid Ends-->
</div>

<%- include("footer"); -%>
