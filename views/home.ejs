<%- include("header"); -%>

<div class="page-body">
    <!-- Container-fluid starts-->
    <div class="container-fluid p-t-45">
        <div class="row">
            <div class="col-sm-12">
                <div class="card" style="background-color: rgb(234, 235, 238);">
                    <div class="card-body">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="card-deck">
                                    <% resultCategories.forEach(category=> { %>
                                        <% if (resultCategories.length === 1) { %>
                                            <div class="col-xl-6 col-md-6 col-sm-12">
                                                <% }else{ %>
                                            <div class="col-xl-3 col-md-6 col-sm-12">
                                                <% } %>
                                            <form method="GET" action="/productsPage">
                                                <div class="card shadow-lg" style="width: 100%; height: 100%; margin-top: 25px;">
                                                    <img src="<%= category.categoryPicture %>" class="card-img-top" style="width: 100%; height: 250px;" alt="...">
                                                    <div class="card-body">
                                                        <h5 class="card-title"><%= category.categoryName%></h5>
                                                    </div>
                                                    <div class="card-footer">
                                                        <input type="hidden" value="1" name="editProduct" id="editProduct">
                                                        <button name="categoryNameForRequest" value="<%= category.categoryNameForRequest %>" class="btn btn-solid w-100" type="submit">مشاهده</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include("footer"); -%>